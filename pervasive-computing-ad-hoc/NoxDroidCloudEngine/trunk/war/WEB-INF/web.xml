<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns="http://java.sun.com/xml/ns/javaee"
xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
	<servlet>
		<servlet-name>NoxDroidCloudEngine</servlet-name>
		<servlet-class>dk.itu.noxdroidcloudengine.NoxDroidCloudEngineServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>NoxDroidCloudEngine</servlet-name>
		<url-pattern>/noxdroidcloudengine</url-pattern>
	</servlet-mapping>
	
	
	
	<!-- add track recording -->  
	<servlet>
        <servlet-name>add_track</servlet-name>
        <servlet-class>dk.itu.noxdroidcloudengine.tracks.AddTrackServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>add_track</servlet-name>
        <url-pattern>/add_track</url-pattern>
    </servlet-mapping>

	<!-- 
	** nox droid listings **
	 -->
	
	<!-- noxdroids -->
	<servlet>
        <servlet-name>noxdroids_listing</servlet-name>
        <servlet-class>dk.itu.noxdroidcloudengine.noxdroids.NoxDroidsListingServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>noxdroids_listing</servlet-name>
        <url-pattern>/noxdroids_listing</url-pattern>
    </servlet-mapping>

	<!-- tracks -->
	<servlet>
        <servlet-name>noxdroids_tracks_listing</servlet-name>
        <servlet-class>dk.itu.noxdroidcloudengine.noxdroids.NoxDroidsTracksListingServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>noxdroids_tracks_listing</servlet-name>
        <url-pattern>/noxdroids_tracks_listing</url-pattern>
    </servlet-mapping>

	<!-- nox -->
	<servlet>
        <servlet-name>noxdroids_tracks_nox_listing</servlet-name>
        <servlet-class>dk.itu.noxdroidcloudengine.noxdroids.NoxDroidsTracksNoxListingServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>noxdroids_tracks_nox_listing</servlet-name>
        <url-pattern>/noxdroids_tracks_nox_listing</url-pattern>
    </servlet-mapping>

	<!-- location -->
	<servlet>
        <servlet-name>noxdroids_tracks_location_listing</servlet-name>
        <servlet-class>dk.itu.noxdroidcloudengine.noxdroids.NoxDroidsTracksLocationsListingServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>noxdroids_tracks_location_listing</servlet-name>
        <url-pattern>/noxdroids_tracks_location_listing</url-pattern>
    </servlet-mapping>

	<servlet>
        <servlet-name>noxdroids_tracks_location_csv_listing</servlet-name>
        <servlet-class>dk.itu.noxdroidcloudengine.noxdroids.NoxDroidsTracksLocationsCSVListingServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>noxdroids_tracks_location_csv_listing</servlet-name>
        <url-pattern>/noxdroids_tracks_location_csv_listing</url-pattern>
    </servlet-mapping>
	
  <!-- add track recording with nox/location dataprocessing-->  
	<servlet>
        <servlet-name>post_track</servlet-name>
        <servlet-class>dk.itu.noxdroidcloudengine.tracks.PostTrackServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>post_track</servlet-name>
        <url-pattern>/post_track</url-pattern>
    </servlet-mapping>
    
  <!-- Test kml files-->  
	<servlet>
        <servlet-name>serve_kml</servlet-name>
        <servlet-class>dk.itu.noxdroidcloudengine.servlets.KMLDataServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>serve_kml</servlet-name>
        <url-pattern>/serve_kml</url-pattern>
    </servlet-mapping>  
    
      <!-- Test kml files-->  
	<servlet>
        <servlet-name>noxdroidwebservice</servlet-name>
        <servlet-class>dk.itu.noxdroidcloudengine.servlets.NoxdroidWebservice</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>noxdroidwebservice</servlet-name>
        <url-pattern>/noxdroidwebservice</url-pattern>
    </servlet-mapping>
    
          <!-- Test kml files-->  
	<servlet>
        <servlet-name>admin</servlet-name>
        <servlet-class>dk.itu.noxdroidcloudengine.servlets.AdministrationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>admin</servlet-name>
        <url-pattern>/admin</url-pattern>
    </servlet-mapping>
	
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>	
</web-app>
