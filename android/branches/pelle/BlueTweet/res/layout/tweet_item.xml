<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content" android:orientation="vertical">
<TextView android:layout_height="wrap_content" android:layout_width="fill_parent" android:id="@+id/TweetMessage"></TextView>
<TextView android:layout_height="wrap_content" android:layout_width="fill_parent" android:id="@+id/TweetName"></TextView>
<TextView android:layout_height="wrap_content" android:id="@+id/TweetTimestamp" android:layout_width="fill_parent"></TextView>
</LinearLayout>
